<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.example.mitchel.a436project.TicTacToeGame">

        <Button
            android:id="@+id/Button00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="62dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="137dp"
            android:checked="false"
            android:padding="30dp" />

        <Button
            android:id="@+id/Button01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Button11"
            android:layout_toEndOf="@+id/Button00"
            android:layout_toRightOf="@+id/Button00"
            android:padding="30dp" />

        <Button
            android:id="@+id/Button02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Button01"
            android:layout_alignBottom="@+id/Button01"
            android:layout_toEndOf="@+id/Button01"
            android:layout_toRightOf="@+id/Button01"
            android:padding="30dp" />

        <Button
            android:id="@+id/Button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Button00"
            android:layout_alignStart="@+id/Button00"
            android:layout_below="@+id/Button00"
            android:padding="30dp" />

        <Button
            android:id="@+id/Button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Button12"
            android:layout_alignBottom="@+id/Button12"
            android:layout_toEndOf="@+id/Button00"
            android:layout_toRightOf="@+id/Button00"
            android:padding="30dp" />

        <Button
            android:id="@+id/Button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Button21"
            android:layout_toEndOf="@+id/Button01"
            android:layout_toRightOf="@+id/Button01"
            android:padding="30dp" />

        <Button
            android:id="@+id/Button20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Button10"
            android:layout_toLeftOf="@+id/Button21"
            android:layout_toStartOf="@+id/Button21"
            android:padding="30dp" />

        <Button
            android:id="@+id/Button21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Button20"
            android:layout_alignBottom="@+id/Button20"
            android:layout_toEndOf="@+id/Button10"
            android:layout_toRightOf="@+id/Button10"
            android:padding="30dp" />

        <Button
            android:id="@+id/Button22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Button12"
            android:layout_toEndOf="@+id/Button21"
            android:layout_toRightOf="@+id/Button21"
            android:padding="30dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:text="Opponent's turn" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Button21"
            android:layout_centerHorizontal="true"
            android:text="Your turn" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:text=" "
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:visibility="visible" />

</RelativeLayout>
